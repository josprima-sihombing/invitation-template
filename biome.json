{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [".next", ".vercel", ".husky", "node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "off"
			},
			"style": {
				"useSelfClosingElements": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			}
		}
	}
}
