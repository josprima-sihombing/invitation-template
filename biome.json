{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "off"
			},
			"style": {
				"useSelfClosingElements": "off"
			}
		},
		"ignore": ["./next"]
	}
}
